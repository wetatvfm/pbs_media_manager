{#
/**
 * @file show.html.twig
 * Default theme implementation to present Show data.
 */
#}
<div{{ attributes.addClass('show') }}>
    <h2>{{ title }}</h2>
    <ul>
        <li>Slug : {{ slug }}</li>
        <li>ID : {{  id }}</li>
    </ul>
    <p>{{ description_short }}</p>
    <p>{{ description_long }}</p>
    <h3>Recent Episodes</h3>
    {%  for episode in episodes %}
      <h4>{{  episode.title }}</h4>
        <p>{{ episode.description }}</p>

    {% endfor %}
</div>
